<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/back_grad"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/CV"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="0.5dp"
            android:layout_margin="5dp"
            android:id="@+id/userImage"
            app:civ_border_color="#212121"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginRight="21dp"
                android:layout_marginLeft="21dp"
                android:layout_below="@+id/userImage"
                android:layout_marginTop="7dp"
                android:background="#e0e0e0"
                android:id="@+id/textView2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#757575"
                android:id="@+id/userName"
                android:layout_marginTop="7dp"
                android:text="Shantanu"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9e9e9e"
                android:textStyle="italic"
                android:layout_marginTop="7dp"
                android:text="shanjohri@sdad.cpm"
                android:id="@+id/userEmail"
                android:layout_below="@+id/userName"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/love"
                android:layout_margin="1dp"
                android:textStyle="italic"
                android:id="@+id/loveInd"
                android:layout_centerHorizontal="true"
                android:textColor="#e0e0e0"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_above="@+id/loveInd"
                android:background="#eeeeee"
                android:id="@+id/textView3" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backtohome"
                android:src="@drawable/ic_search_sel"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:textAllCaps="false"
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/logOut"

                android:backgroundTint="#35252f"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/userEmail"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    </RelativeLayout>
</RelativeLayout>